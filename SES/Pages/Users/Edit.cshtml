@page
@model SES.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
    var pageHeader = Model.User.Id > 0 ? "Edit" : "Create";
}

<h1>@pageHeader</h1>

<form method="post" class="mt-3">
    @*Use hidden input elements to store employee id which
        we need when we submit the form*@
    <input hidden asp-for="User.Id" />

    @*asp-for tag helper takes care of displaying the existing
        data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="User.FirstName" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="User.FirstName" class="form-control" placeholder="FirstName">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.LastName" class="form-control" placeholder="LastName">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="User.Sex" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Sex" class="form-control" placeholder="Sex">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="User.Birthday" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="User.Birthday" class="form-control" placeholder="Birthday">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Users/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>